# Base image version to use. This is used to tag the image.
BASE_IMAGE_VERSION=1.0

# Name of the Base Docker image to use.
BASE_IMAGE_NAME=base

# The hostname of the Base server. This can be set to define a specific hostname.
BASE_HOSTNAME=base
